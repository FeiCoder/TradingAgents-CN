# Dockerfile.data_service
# TradingAgents-CN 数据管理服务 - 独立 Docker 镜像
# 支持连接到外部或容器内的 MongoDB / Redis 实例
# 容器网络内自动使用服务发现（MONGODB_HOST=mongodb, REDIS_HOST=redis）

FROM python:3.10-slim-bookworm

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    TZ=Asia/Shanghai \
    DOCKER_CONTAINER=true

WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y --no-install-recommends \
        ca-certificates \
        curl && \
    rm -rf /var/lib/apt/lists/*

# 复制依赖声明
COPY pyproject.toml README.md ./

# 安装 Python 依赖
RUN pip install --upgrade pip -i https://pypi.tuna.tsinghua.edu.cn/simple && \
    pip install --prefer-binary . -i https://pypi.tuna.tsinghua.edu.cn/simple

# 复制服务代码
COPY data_service ./data_service
COPY tradingagents ./tradingagents

# 创建必要目录
RUN mkdir -p /app/logs /app/cache /app/data

# 服务端口（区别于全量后端的 8000）
EXPOSE 8001

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --retries=3 --start-period=30s \
    CMD curl -f http://localhost:8001/healthz || exit 1

# 启动命令
CMD ["python", "-m", "uvicorn", "data_service.main:app", \
     "--host", "0.0.0.0", "--port", "8001", "--workers", "2"]
